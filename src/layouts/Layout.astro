---
import { SEO } from 'astro-seo';

import ToastContainer from '@components/utils/ToastContainer.svelte';
import Modal from '@components/utils/Modal.svelte';
import Navigation from '@components/Navigation.svelte';
import CookieBanner from '@components/utils/CookieBanner.svelte';

import { seoConfig } from '../../utils/seoConfig';

import '@styles/index.scss';

type LayoutProps = {
  header?: string;
  subheading?: string;
  nav?: string;
  arrow?: boolean;
  story?: string;
  title?: string;
  ogTitle?: string;
  description?: string;
  image?: string;
  imageType?: string;
  url?: string;
  type?: string;
  disableIndexing?: boolean;
};

const {
  header,
  subheading,
  nav,
  arrow,
  story,
  title = 'Welcome to CoNexus',
  description = 'CoNexus is the gateway to a boundless multiverse with infinite Choose-Your-Adventure stories.',
  image = '/favicon.ico',
  imageType,
  url = 'https://conexus-test.degenerousdao.com/',
  type = 'website',

  ogTitle,
  disableIndexing = false,
} = Astro.props as LayoutProps;
---

<html lang="en">
  <head>
    <title>CoNexus | DeGenerous DAO</title>

    <meta charset="utf-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link type="text/plain" rel="author" href="/humans.txt" />

    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
    <link
      rel="preconnect"
      crossorigin="anonymous"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      crossorigin="anonymous"
      href="https://fonts.gstatic.com"
    />
    <!-- Caveat, Comic Neue, Courier Prime, Lora, Merriweather, Roboto -->
    <link
      rel="stylesheet"
      crossorigin="anonymous"
      href="https://fonts.googleapis.com/css2?family=Caveat:wght@400..700&family=Comic+Neue:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=Courier+Prime:ital,wght@0,400;0,700;1,400;1,700&family=Lora:ital,wght@0,400..700;1,400..700&family=Merriweather:ital,opsz,wght@0,18..144,300..900;1,18..144,300..900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
    />

    <SEO
      title={title}
      description={seoConfig.description || description}
      noindex={disableIndexing}
      nofollow={disableIndexing}
      openGraph={{
        basic: {
          title: ogTitle || title,
          type: 'website',
          image: seoConfig.image.url || image,
        },
        image: {
          width: seoConfig.image.width,
          height: seoConfig.image.height,
          alt: seoConfig.image.alt || title,
        },
        optional: {
          siteName: seoConfig.siteName,
          description: seoConfig.description || description,
        },
      }}
      twitter={{
        card: 'summary_large_image',
      }}
    />

    <link rel="manifest" href="/manifest.webmanifest" />
  </head>
  <body>
    <ToastContainer client:load />

    <Navigation
      {header}
      {subheading}
      activeTab={nav}
      {arrow}
      storyName={story}
      client:load
    />

    <slot />

    <Modal client:load />

    <CookieBanner client:load />
  </body>
</html>

