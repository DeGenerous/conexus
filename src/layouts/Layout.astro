---
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';

import Profile from '../components/Profile.svelte';
import ToastContainer from '../components/ToastContainer.svelte';

const {
  header,
  subheading,
  arrow,
  story,
  title,
  description,
  image,
  imageType,
  url,
  type = 'website',
} = Astro.props;
---

<html lang="en">
  <head>
    <title>CoNexus | DeGenerous</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/x-icon" href="/favicon.png" />
    <meta
      http-equiv="Content-Security-Policy"
      content="upgrade-insecure-requests"
    />
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:image:type" content={imageType ?? 'image/png'} />
    <meta property="og:url" content={url} />
    <meta property="og:type" content={type} />

    <!-- Twitter Card Meta Tags (optional for better previews) -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    <ViewTransitions />
  </head>
  <body>
    <ToastContainer client:load />
    {
      !story && (
        <header class="container">
          {arrow && (
            <a
              class="icon arrow"
              href="javascript:history.back()"
              aria-label="Back arrow"
            />
          )}
          {!arrow && (
            <a
              class="icon logo"
              href="https://degenerousdao.com/"
              target="_blank"
              aria-label="dgrs-logo"
            />
          )}
          {header === 'CoNexus' ? (
            <picture>
              <source srcset="title.avif" type="image/avif" />
              <img
                class="blur"
                src="title.png"
                alt="CoNexus"
                draggable="false"
              />
            </picture>
          ) : (
            <h1 class="header">{header}</h1>
          )}
          <Profile client:load />
        </header>
      )
    }
    {subheading && <p class="subheading" set:html={subheading} />}

    <slot />

    <style>
      .container {
        width: 100vw;
        display: flex;
        flex-flow: row nowrap;
        justify-content: space-between;
        align-items: center;
        padding: 2vw;
      }

      .header {
        font-size: 5vw;
        line-height: 5vw;
        text-align: center;
        color: rgba(51, 226, 230, 0.85);
        text-shadow: 0 0.5vw 0.5vw #010020;
      }

      img {
        width: 33vw;
        height: auto;
        filter: drop-shadow(0 0 0.5vw rgba(51, 226, 230, 0.25));
        box-shadow:
          inset 0 0 0.5vw rgba(51, 226, 230, 0.5),
          0 0.25vw 0.25vw #010020;
        background-color: rgba(51, 226, 230, 0.25);
        padding: 1vw 2vw;
        border-radius: 1.5vw;
        aspect-ratio: initial;
      }

      .subheading {
        width: 90%;
        font-size: 1.5vw;
        line-height: 2.5vw;
        text-align: center;
        color: rgba(51, 226, 230, 0.75);
        text-shadow: 0 0.25vw 0.25vw #010020;
      }

      a {
        height: 7vw;
        width: 7vw;
        z-index: 1;
        background-size: contain;
      }

      .arrow {
        background-image: url('/icons/backArrow.avif');
        opacity: 0.4;
      }

      .arrow:hover,
      .arrow:active {
        filter: drop-shadow(0 0 0.5vw rgba(51, 226, 230, 0.5));
        opacity: 0.75;
      }

      .logo {
        background-image: url('/logo.avif');
        opacity: 0.7;
      }

      .logo:hover,
      .logo:active {
        opacity: 0.9;
      }

      @media only screen and (max-width: 600px) {
        html {
          padding-top: 25%;
        }

        .container {
          position: fixed;
          top: 0;
          background-color: rgba(1, 0, 32, 0.75);
          filter: drop-shadow(0 1vw 1vw rgba(1, 0, 32, 0.75));
          -webkit-backdrop-filter: blur(2vw);
          backdrop-filter: blur(2vw);
          z-index: 2;
        }

        .header {
          font-size: 1.5em;
        }

        img {
          width: 40vw;
          padding: 2vw 4vw;
        }

        .subheading {
          font-size: inherit;
          line-height: 1.5em;
          padding: 1em;
          background-color: rgba(22, 30, 95, 0.5);
          -webkit-backdrop-filter: blur(2vw);
          backdrop-filter: blur(2vw);
          border: 0.1vw solid rgba(51, 226, 230, 0.5);
          border-radius: 1em;
        }

        a {
          width: 3em;
          height: 3em;
        }

        .profile-icon {
          width: 3em;
          height: 3em;
        }
      }
    </style>
  </body>
</html>

