---
import Layout from '@layouts/Layout.astro';

import ExploreStory from '@components/dashy/dream/manage/ExploreStory.svelte';

const { topic } = Astro.params;

const arrow = true;

const meta = {
  header: topic,
};

if (!topic) {
  Astro.redirect('/');
}
---

<Layout {...meta} {arrow}>
  <ExploreStory topic_name={topic} client:load />
</Layout>
