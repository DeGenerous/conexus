---
import Layout from '@layouts/Layout.astro';
import Menu from '@components/Menu.svelte';

const meta = {
  header: 'CoNexus',
  subheading: `
    Welcome to CoNexus - where stories evolve with every move you make.<br />
    Step into a living multiverse that responds in real time. Become the main character.`,
  nav: 'Home',
};

const footerText = [
  'Personalized storylines are yours to explore.',
  'Every choice shapes a path that no one else will ever walk.',
  'CoNexus v2 is launching soon, empowering you to create and monetize stories.',
];
---

<Layout {...meta}>
  <main>
    <Menu client:load />
    <footer class="flex">
      {
        footerText.map((text: any) => (
          <p class="mobile-text-wrapper pad-inline text-shad">{text}</p>
        ))
      }
    </footer>
  </main>
</Layout>
