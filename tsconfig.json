{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strictNullChecks": true,
    // "ignoreDeprecations": "6.0",
    // "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@errors/*": ["./src/errors/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@lib/*": ["./src/lib/*"],
      "@constants/*": ["./src/constants/*"],
      "@server/*": ["./src/server/*"],
      "@service/*": ["./src/service/*"],
      "@stores/*": ["./src/stores/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/utils/*"]
    }
  }
}
